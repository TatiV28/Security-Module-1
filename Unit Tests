import pytest
from app.main import app

@pytest.fixture
def client():
    app.config['TESTING'] = True
    with app.test_client() as client:
        yield client

def test_home(client):
    response = client.get('/')
    assert response.status_code == 200
    assert b'Welcome' in response.data

def test_analyze_valid_input(client):
    data = {'value1': [1, 2, 3], 'value2': [4, 5, 6]}
    response = client.post('/analyze', json=data)
    assert response.status_code == 200
    assert 'mean' in response.json

def test_analyze_invalid_input(client):
    data = {'value1': '<script>alert(1)</script>'}
    response = client.post('/analyze', json=data)
    assert response.status_code == 400
